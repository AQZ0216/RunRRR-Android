<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/missions_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">
    <!--android:padding="@dimen/md_keylines">-->

    <ImageView
        android:id="@+id/list_type"
        android:layout_width="@dimen/avator_size"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:padding="10dp"
        tools:src="@drawable/missions_main" />

    <TextView
        android:id="@+id/list_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="@string/item_title"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/article_subheading" />

    <LinearLayout
        android:layout_width="@dimen/check_size"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_time"
            android:layout_width="@dimen/check_size"
            android:layout_height="26dp"
            android:textColor="@color/medium_grey"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            tools:text="@string/item_time"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/list_body" />

        <ImageView
            android:id="@+id/list_state"
            android:layout_width="@dimen/check_size"
            android:layout_height="@dimen/check_size"
            android:scaleType="centerCrop"
            android:padding="5dp"
            tools:src="@drawable/state_passed"/>
    </LinearLayout>
</LinearLayout>